{
  "name": "stream-hud",
  "version": "0.1.0",
  "private": true,
  "description": "Stream HUD - Browser overlay for OBS with checklist and progress tracking",
  "scripts": {
    "dev:overlay": "pnpm --filter overlay dev",
    "dev:ws": "pnpm --filter checklist-ws dev",
    "dev:stats": "pnpm --filter stats-bridge dev",
    "dev:controller": "pnpm --filter hud-controller dev",
    "dev": "concurrently \"pnpm dev:ws\" \"pnpm dev:stats\" \"pnpm dev:overlay\"",
    "dev:all": "concurrently \"pnpm dev:ws\" \"pnpm dev:stats\" \"pnpm dev:overlay\" \"pnpm dev:controller\"",
    "build:overlay": "pnpm --filter overlay build",
    "build:ws": "pnpm --filter checklist-ws build",
    "build:stats": "pnpm --filter stats-bridge build",
    "build:controller": "pnpm --filter hud-controller build",
    "build": "pnpm build:overlay && pnpm build:ws && pnpm build:stats && pnpm build:controller"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}